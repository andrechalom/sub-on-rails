<h2>Edição de usuário</h2>
<%= render 'flash' =%>

<%= form_for :user, url: user_path(@user), method: :patch, html: {class: 'form-horizontal'} do |f| %>

    <p><%= f.label "Login" %><br>
       <%= f.text_field :login, disabled: true, class: 'form-control' =%>
  </p>
      <p>
    <%= f.label "E-mail" %><br>
    <%= f.text_field :email, class: 'form-control' %>
  </p>
 
    <p>
    <%= f.label "Senha" %><br>
    <span class="small">(Para manter a mesma, deixe em branco)</span><br>
      <%= f.password_field :password, class: 'form-control' %>
    </p>
      <p>
    <%= f.label "Nome Completo" %><br>
    <%= f.text_field :nome, class: 'form-control' %>
  </p>
      <p>
      <% if current_user and current_user.admin %>
    <%= f.check_box :admin %>
    <%= f.label "Admin" %><br>

    <%= f.check_box :authorized %>
    <%= f.label "Autorizado"%><br>
<% end %>
  </p>
   
      <p>
        <%= f.submit "Alterar", class: 'btn btn-default' %>
      </p>
  <% end %>
